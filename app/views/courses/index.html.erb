<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instructor</th>
      <th>Limit</th>
      <th>Fee</th>
      <th>start_time</th>
      <th>end_time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.instructor_id %></td>
        <td><%= course.limit %></td>
        <td><%= course.fee %></td>
        <td><%= course.start_time %></td>
        <td><%= course.end_time %></td>
        <td><% if @course.users.any?  %>
          <p> Students: <%= render @course.users %> </p>
        <% end %></td>
        <td><small><%= plurlize(course.user.count, "students")%></small></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

