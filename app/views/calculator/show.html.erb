<% provide(:title, "Calories Calculator") %>
<html>
<h1>Calories Calculator</h1>
<br></br>

<table>

  <thead>
    <tr>
      <th>Exercise Level</th>
      <th rowspan="1"></th>
    </tr>
  </thead>


  <tbody>

      <tr>
        <td>
          <select id = "level" class="btn btn-default dropdown-toggle">
            <option  value="1">Almost No Exercise</option>
            <option  value="2">1-3 times per Week</option>
            <option  value="3">3-5 times per Week</option>
            <option  value="4">6-7 times per Week</option>
            <option  value="5">Athlete</option>
          </select>
        </td>
      </tr>

      <tr>
        <th>Gender</th>
      </tr>

      <tr>
        <td>
          <select id = "gender" class="btn btn-default">
            <option  value="1">Male</option>
            <option  value="0">Female</option>
          </select>
        </td>

      </tr>

      <tr>
        <th>Age</th>
      </tr>
      <tr>
        <th><input type="text" id="age" value = "<%=@age%>" class="form-control input-sm"></th>


      </tr>

      <tr>
        <th>Height(cm)</th>
      </tr>
      <tr>
        <th><input type="text" id="height" value = "<%=@user.height%>" class="form-control input-sm"></th>



      </tr>

      <tr>
        <th>Weight(kg)</th>
      </tr>
      <tr>
        <th><input type="text" id="weight" value = "<%=@user.weight%>" class="form-control input-sm"></th>

      </tr>

      <tr>
        <th><br>Calories Demand(Calories/day)</br></th>
      </tr>
      <tr>
        <th><span id="result" class="text-primary"></span></th>
      </tr>

      <tr>
        <th><br>Fat Loss(Calories/day)</br></th>
      </tr>
      <tr>
        <th><span id="fat_loss_result" class="text-danger"></span></th>
      </tr>


      <tr>
        <th><br><button type="button" onclick="cal()" class="btn btn-primary">Start</button></span></br></th>
      </tr>

  </tbody>
</table>
</html>
