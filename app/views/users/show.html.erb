<% provide(:title, @user.name) %>

<script type='text/javascript'>

(function()
{
  if( window.localStorage )
  {
    if( !localStorage.getItem( 'firstLoad' ) )
    {
      localStorage[ 'firstLoad' ] = true;
      window.location.reload();
    }
    else
      localStorage.removeItem( 'firstLoad' );
  }
})();

</script>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br>
        <% if current_user.admin? %>
          id: <%= @user.id %>
        <% end %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
      <h5>Height</h5>
      <%= @user.height %><br>
      <h5>Weight</h5>
      <%= @user.weight %><br>
      <h5>Birthday</h5>
      <%= @user.date_of_birth %><br>
      <h5>Description</h5>
      <%= @user.description %><br>
</div>


<h4>My courses listing</h4>

<h1>My courses listing</h1>
<h3>Name</h3>
<div>
  <table class="table table-hover">
    <% @user_courses.each do |user_course| %>
    <tr>
      <%mycourse = Course.find(user_course.course_id)%>
      <td><%= link_to mycourse.name, mycourse %></td>

      <td>
        <% if current_user?(@user) %>
        <%= link_to 'Delete', user_course_path(user_course),
                                :method => :delete,
                                :data => { :confirm => "Are you sure?" },
                                :class => "btn btn-xs btn-danger" %>
        <% end %>
      </td>

    </tr>
    <% end %>
  </table>
</div>

<div id="calendar">
  <% @user_courses.each do |user_course| %>
  <tr>
    <%mycourse = Course.find(user_course.course_id)%>
    <td><%= link_to mycourse.name, mycourse %></td>
    <td><%=  mycourse.start %></td>

  </tr>
  <% end %>

</div>
