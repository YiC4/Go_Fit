<p id="notice"><%= notice %></p>

<h1>Listing Cources</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Max student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cources.each do |cource| %>
      <tr>
        <td><%= cource.title %></td>
        <td><%= cource.start_date %></td>
        <td><%= cource.end_date %></td>
        <td><%= cource.max_student %></td>
        <td><%= link_to 'Show', cource %></td>
        <td><%= link_to 'Edit', edit_cource_path(cource) %></td>
        <td><%= link_to 'Destroy', cource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

